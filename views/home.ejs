
<h1 > Welcome to the <%= title %> page !</h1>

<section id ="post-section">
    <% if (locals.user){ %>
        <h3>Post</h3>
        <form action="/posts/create" method="POST">
            <textarea name = "content" cols="16" rows="2" placeholder="Type here..." required></textarea>
            <input type="submit" value="Post">
        </form>

   <% }%>
   <div class="posts-list-container">
    <ul>
        <% for(post of posts){ %>   
               
        <%-include('_posts') %>
            
        <%} %>
    </ul>
</div>

</section>
     